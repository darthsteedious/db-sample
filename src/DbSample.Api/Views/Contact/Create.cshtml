@model DbSample.Api.Domain.Contact

<!DOCTYPE html>

<html>
<head>
    <title>Create Contact</title>
</head>
<body>
<div>
    <form action="/contact/create" method="post">
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName"/>
        
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" value="@Model.LastName"/>
        
        <label for="Birthdate">Birthdate</label>
        <input type="date" id="Birthdate" name="Birthdate" value="@Model.Birthdate?.ToString("yyyy-MM-dd")"/>
        
        <input type="submit" value="Submit"/>
    </form>
</div>
</body>
</html>